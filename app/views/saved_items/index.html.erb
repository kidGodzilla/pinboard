<h1>Your saved ideas</h1>





<table>
  <thead>
  <tr>
    <th>Idea ID</th>
    <th>User</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @saved_items.each do |saved_item| %>
      <tr>
        <td><%= saved_item.idea_id %></td>
        <td><%= saved_item.user %></td>
        <td><%= link_to 'Show', saved_item %></td>
        <td><%= link_to 'Edit', edit_saved_item_path(saved_item) %></td>
        <td><%= link_to 'Destroy', saved_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>